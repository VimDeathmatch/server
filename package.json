{
    "name": "vim-deathmatch",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "start": "ts-node src/server.ts",
        "manual-tests": "ts-node -r tsconfig-paths/register src/__manual_tests__/index.ts | pino-pretty -c -t"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^26.0.10",
        "@types/node": "^14.0.27",
        "jest": "^26.6.3",
        "pino-pretty": "^4.3.0",
        "ts-jest": "^26.2.0",
        "ts-node": "^8.10.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.9.7"
    },
    "jest": {
        "preset": "ts-jest",
        "testMatch": [
            "**/__tests__/**/*.[jt]s?(x)"
        ],
        "testPathIgnorePatterns": [
            "node_modules",
            "__mocks__",
            "__helpers__"
        ],
        "moduleNameMapper": {
            "^src/(.*)": [
                "<rootDir>/src/$1"
            ],
            "^__helpers__/(.*)": [
                "<rootDir>/src/__helpers__/$1"
            ],
            "^__mocks__/(.*)": [
                "<rootDir>/src/__mocks__/$1"
            ],
            "^game/(.*)": [
                "<rootDir>/src/game/$1"
            ]
        }
    }
}
